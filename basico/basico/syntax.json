{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "basico",
	"scopeName": "source.cal",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"begin": "\\/\\*",
			"comment": "string",
			"end": "\\*\\/",
			"name": "comment.block.source.cal"
		},
		{
			"comment": "string",
			"match": "\\|\\|.*$",
			"name": "comment.line.source.cal"
		}
	],
	"repository": {
