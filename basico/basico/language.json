{
    "comments": {
        "lineComment": "||",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
		{ "open": "(", "close": ")" },
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
		{ "open": "`", "close": "`", "notIn": ["string", "comment"] },
		{ "open": "/**", "close": " */", "notIn": ["string"] }

    ],
    "surroundingPairs": [
        ["{", "}"],
        ["(", ")"],
        ["\"", "\""]
    ],
	"folding": {
		"proceso": {
			"start": "^\\s*#?\\|PROCESO\\b\\s\\w+\\s*;",
			"end": "^\\s*#?\\|FPRC\\s*;"
        },
        "ficheros": {
            "start": "^\\s*#?\\|FICHEROS\\b\\s\\w+\\s*;",
			"end": "^\\s*#?\\|FIN\\s*;"
        },
        "campos": {
            "start": "^\\s*#?\\|CAMPOS\\b\\s\\w+\\s*;",
			"end": "^\\s*#?\\|FIN\\s*;"
        },
        "variables": {
            "start": "^\\s*#?\\|VARIABLES\\b\\s\\w+\\s*;",
			"end": "^\\s*#?\\|FIN\\s*;"
        },
        "wordPattern": "(-?\\d*\\.\\d\\w*)|\\|{0,1}([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\;\\:\\'\\\\\\|\"\\,\\.\\<\\>\\/\\?\\s]+)",
        "indentationRules": {
            "increaseIndentPattern": "(^((?!\\|\\|).)*\\|PROCESO\\s+.+;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|SI\\s+((?!FINSI).)*;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|SINO\\s*;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|FICHEROS\\s*;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|CAMPOS\\s*;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|VARIABLES\\s*;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|DEFBUCLE\\s+.+;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|RUTINA\\s+.+;((\\s*)|(\\s*(\\|\\|).*))$)",
            "decreaseIndentPattern": "(^\\s*\\|FINSI\\s*;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|FPRC\\s*;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|FRUT\\s*;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|FIN\\s*;((\\s*)|(\\s*(\\|\\|).*))$)|(^((?!\\|\\|).)*\\|SINO\\s*;((\\s*)|(\\s*(\\|\\|).*))$)"
        }
	}
}